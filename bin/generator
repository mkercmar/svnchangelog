#!/usr/bin/php
<?php
// include bootstrap
require realpath(preg_replace('/generator$/', '', __FILE__) . '/../include/bootstrap.php');

$aArguments = $_SERVER['argv'];

if (count($aArguments) > 1) {
    if ('user' == $aArguments[1] && isset($_PROJECTS[$aArguments[2]])) {
        new Cl_Client_Command_ByUser($aArguments[2], $aArguments[3]);

        exit;
    } elseif (isset($_PROJECTS[$aArguments[1]])) {
        new Cl_Client_Command_Build($aArguments[1]);

        exit;
    }
}

new Cl_Client_Command_ShowUsage();
